<div class="container">
  <div class="row d-flex justify-content-center">
    <table class = "table border">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(current_user.id) do %>
              <%= image_tag current_user.get_profile_image(100,100) %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td>肉体改造前</td>
          <td><%= current_user.weight %>kg</td>
        </tr>
        <tr>
          <td scope="row" colspan="2"><u>目標</u> <br>
          <%= safe_join((current_user.goal.presence || "設定されていません").split("\n"),tag(:br)) %></td>
        </tr>
        <tr>
          <td scope="row" colspan="2"><u>自己紹介</u> <br>
          <%= safe_join((current_user.introduction || "入力されていません").split("\n"),tag(:br)) %></td>
        </tr>
        <tr>
          <td>フォロー</td>
          <td><%= current_user.followings.count %></td>
        </tr>
        <tr>
          <td>フォロワー</td>
          <td><%= current_user.followers.count %>
        </tr>
      </tbody>
    </table>
  </div>
</div>