<div class="container mt-3">
  <div class="row d-flex justify-content-center">
    <h2 class="mt-3">投稿フォーム</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="form mt-3">
      <%= form_with model: @post do |f| %>
        <div class="a">
          <%= f.label :date, "日付" %>
          <%= f.date_field :date %>
        </div>
        <div class="mt-3">
          <%= f.label :weight, "体重" %>
          <%= f.text_field :weight%>キログラム
        </div>
        <div class="mt-3">
          <%= f.label :step, "歩数" %>
          <%= f.text_field :step %>歩
        </div>
        <div class="mt-3">
          <%= f.label :food, "食事" %>
          <%= f.select :food, Post.foods.keys, :selected=>Post.foods[@post.food] %>
        </div>
        <div class="mt-3">
          <%= f.label :text, "感想" %>
          <%= f.text_area :text %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit '投稿' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

