<div class="container">
  <div class="row d-flex justify-content-center">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user do |f| %>
      <table class = "table table-borderless">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <th>プロフィール画像</th>
            <td><%= f.file_field :profile_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>目標</th>
            <td><%= f.text_area :goal, rows: '4', cols: '40' %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= f.text_area :introduction, rows: '5', cols: '40' %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "編集", class: "btn btn-success mr-5" %>
              <%= link_to "退会", user_path(@user.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に退会しますか？" %>
            </td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>