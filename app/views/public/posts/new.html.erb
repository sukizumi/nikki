<div class="container mt-3">
  <div class="row d-flex justify-content-center">
    <div class="form">
      <%= form_with model: @post do |f| %>
        <table class="table table-borderless">
          <tr><th>日付</th> <td><%= f.date_field :date %></td></tr>
          <tr><th>体重</th> <td><%= f.number_field :weight%>KG</td></tr>
          <tr><th>歩数</th> <td><%= f.number_field :step %>歩</td></tr>
          <tr><th>食事</th> <td><%= f.select :food, Post.foods.keys, :selected=>Post.foods[@post.food] %></td></tr>
          <tr><th>感想</th> <td><%= f.text_area :text %></td></tr>
          <tr><th></th> <td></td></tr>
        </table>
        <div class="d-flex justify-content-center">
          <%= f.submit '投稿' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

