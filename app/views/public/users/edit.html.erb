<div class="container">
  <div class="row">
    <%= form_with model: @user do |f| %>
      <table class = "table table-borderless">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>ユーザー名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>自己紹介<td>
            <td><%= f.text_field :introduction %>
          </tr>
          <tr>
            <td>目標</td>
            <td><%= f.text_field :goal %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>