<div class="container">
  <div class="row d-flex justify-content-center mt-3">
    <div class="col-3">
      <div class="sticky">
        <%= render "public/users/profile", user: @user %>
        <div class="withdraw mt-3 mb-3">
          <%= link_to "退会させる", admin_user_path(@user.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に退会させますか？" %>
        </div>
      </div>
    </div>

    <div class="col-9">
      <div class="row d-flex justify-content-center">
        <div class="form">
          <% @user.posts.each do |post| %>
            <table class = "table border">
              <tr>
                <th>
                  <%= image_tag post.user.get_profile_image(50,50) %>
                </th>
                <td><big><%= post.user.name %></big></td>
              </tr>
              <tr><th>日付</th> <td><%= post.date %></td></tr>
              <tr><th>体重</th> <td><%= post.weight %>kg</td></tr>
              <tr><th>BMI</th> <td> <%= post.bmi %> </td></tr>
              <tr><th>歩数</th> <td><%= post.step %>歩</td></tr>
              <tr><th>食事内容</th> <td><%= post.food_i18n %></td></tr>
              <tr><th>感想</th> <td><%= safe_join(post.text.split("\n"),tag(:br)) %></td></tr>
              <tr><th></th><td><%= link_to "詳細", admin_post_path(post.id) %></td></tr>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
