<div class="container">
  <div class="row d-flex justify-content-center mb-3">
    <h2 class="mt-3">新規ユーザー登録</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td><%= f.label :name, "ユーザー名" %></td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder =>"肉体改造君" %></td>
          </tr>
          <tr>
            <td><%= f.label :gender, "性別" %></td>
            <td><%= f.select :gender, User.genders.keys, :selected=>User.genders[@user.gender] %></td>
          </tr>
          <tr>
            <td><%= f.label :height, "身長" %><small>(小数点四捨五入)</small></td>
            <td><%= f.text_field :height, :placeholder =>"169" %>cm （168.6cmの場合は169cm）</td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
            <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <%= render "public/shared/links" %>
  </div>
</div>

