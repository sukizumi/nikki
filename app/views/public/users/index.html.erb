<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="mb-4">マイページ</h2>
    <%= render "graph", user: current_user %>
  </div>

  <div class="row mt-4">
    <div class="col-md-3 d-none d-md-block mt-5">
      <%= render 'data', user: current_user %>
    </div>

    <div class="col-md-6 col-12">
      <div class="row d-flex justify-content-center">
        <%= render 'profile', user: current_user %>

        <div class="search mb-5">
          <%= form_with url: mypage_path, method: :get do |f| %>
            <%= f.date_field :start_date, value: params[:start_date] %>　〜　
            <%= f.date_field :end_date, value: params[:end_date] %>
            <%= f.submit "検索" %>
          <% end %>
        </div>
      </div>

      <div class="row d-flex justify-content-center">
        <%= render "posts", posts: @posts %>
      </div>
    </div>
    <div class="col-md-3 d-none d-md-block">
      <div class="sticky">
        <%= render 'bmi' %>
      </div>
    </div>
  </div>
</div>