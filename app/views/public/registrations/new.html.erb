<div class="container">
  <div class="row d-flex justify-content-center mb-3">
    <h2 class="unko">Sign up</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :gender, "性別" %>
        <%= f.select :gender, User.genders.keys, :selected=>User.genders[@user.gender] %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <%= render "public/shared/links" %>
  </div>
</div>
