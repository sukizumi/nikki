<div class="container">
  <div class="row d-flex justify-content-center mb-3">
    <h2 class="mt-3">新規ユーザー登録</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder =>"肉体改造君" %>
      </div>
      <div>
        <%= f.label :gender, "性別" %>
        <%= f.select :gender, User.genders.keys, :selected=>User.genders[@user.gender] %>
      </div>
      <div>
        <%= f.label :height, "身長" %>
        <%= f.text_field :height, :placeholder =>"168.8" %>cm
      </div>
      <div>
        <%= f.label :weight, "体重" %>
        <%= f.text_field :weight, :placeholder =>"70.2" %>kg
      </div>
      <div>
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email", :placeholder => "kaizo@kaizomail.com" %>
      </div>
      <div>
        <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div>
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
    <%= render "public/shared/links" %>
  </div>
</div>

