<div class="container">
  <div class="row d-flex justify-content-center">
    <table class = "table border">
      <tbody>
        <tr>
          <td>
            <% if current_user.profile_image.attached? %>
              <%= image_tag current_user.profile_image, size: "100x100" %>
            <% else %>
              <%= image_tag asset_path("no_image.jpg"), size: "100x100" %>
            <% end %>
          </td>
          <td></td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td>肉体改造前</td>
          <td><%= current_user.weight %>kg</td>
        </tr>
        <tr>
          <td>目標</td>
          <td><%= current_user.goal %></td>
        </tr>
        <tr>
          <td scope="row" colspan="2"><u>自己紹介</u> <br>
          <%= safe_join(current_user.introduction.split("\n"),tag(:br)) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>