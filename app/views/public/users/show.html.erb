<div class="container">
  <div class="row d-flex justify-content-center mt-3">
    <div class="col-3">
      <div>
        <%= render 'profile', user: @user %>
      </div>
      <div id="relationship_btn_<%= @user.id %>">
        <%= render 'public/relationships/btn', user: @user %>
      </div>
    </div>
    <div class="col-6">
      <div class="row d-flex justify-content-center">
        <%= render "graph", user: @user %>

        <div class="search">
          <%= form_with url: user_path(@user), method: :get do |f| %>
            <%= f.label :post_date, "投稿日" %>
            <%= f.date_field :start_date, value: params[:start_date] %>　〜　
            <%= f.date_field :end_date, value: params[:end_date] %>

            <%= f.submit "検索" %>
          <% end %>
        </div>

        <%= render "posts", posts: @posts %>
      </div>
    </div>
    <div class="col-3">
      <div class="sticky">
        <%= render 'bmi' %>
      </div>
    </div>
  </div>
</div>