<div class="comment form mb-2">
  <%= form_with model: [post, post_comment], class: "comment-form", local: false do |f| %>
    <%= f.text_area :comment, rows: '5', class: "form-control w-100", placeholder: "ここにコメント", id: "comment_textarea" %>
    <div class="text-center">
      <%= f.submit '送信', class: "mt-2 btn btn-primary" %>
    </div>
  <% end %>
</div>