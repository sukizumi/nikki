<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "アンフォロー", user_relationships_path(user.id), method: :delete, class: "btn btn-danger", remote: true, data: {"turbolinks" => false} %>
  <% else %>
    <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-success", remote: true, data: {"turbolinks" => false} %>
  <% end %>
<% end %>